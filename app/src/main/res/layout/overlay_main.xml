<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="jp.seo.uma.eventchecker.ui.overlay.OverlayViewModel" />
    </data>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:visibility="@{viewModel.show ? View.VISIBLE : View.GONE}">

        <LinearLayout
            android:layout_width="@dimen/overlay_width"
            android:layout_height="wrap_content"
            android:background="#AAFFFFFF"
            android:orientation="vertical"
            android:padding="7dp">

            <TextView
                android:id="@+id/text_overlay_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_overlay_large"
                android:textStyle="bold"
                app:gameEventTitle="@{viewModel.currentEvent}" />

            <ListView
                android:id="@+id/list_overlay_choices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:gameEventChoice="@{viewModel.currentEvent}" />
        </LinearLayout>

    </RelativeLayout>
</layout>
